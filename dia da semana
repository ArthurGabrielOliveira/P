let dia_semana = prompt('Escreva qual é o dia da semana:').toLowerCase();

if (dia_semana == 'segunda' || dia_semana == 'terça' || dia_semana == 'quarta' || dia_semana == 'quinta' || dia_semana == 'sexta') {
    alert('Boa semana');
} else if (dia_semana == 'sabado' || dia_semana == 'domingo') {
    alert('Bom final de semana');
